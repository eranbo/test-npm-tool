{
  "compilerOptions": {
    "target": "es2016",
    "module": "commonjs",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "declaration": true,
    "declarationMap": true,
    "noImplicitThis": true,
    "strictBindCallApply": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "composite": true,
    "strict": true,
    "skipLibCheck": true,
    "rootDir": "src",
    "outDir": "./dist",
    "resolveJsonModule": true
  },
  "include": ["src"]
}
